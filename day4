# day4------------------  
list = []
i = int(input("no of days:"))
for x in range(1,i+1):
    n = int(input(f"day {x} expences :"))
    list.append(n)
    

print(list)
sum = 0
for s in list :
    sum = sum + s
    
total  = sum 
avg = total / i
print(f"total :{total}")
print(f"avg : {avg}")





    




      
